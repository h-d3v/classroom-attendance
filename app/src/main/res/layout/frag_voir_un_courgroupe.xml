<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSigleCours"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="TextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="569dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="80dp"
            android:text="Nom du cours"
            app:layout_constraintBottom_toTopOf="@+id/btnVoirListeEleves"
            app:layout_constraintEnd_toStartOf="@+id/tvNbElevesCour"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/tvNbElevesCour"
            android:layout_width="123dp"
            android:layout_height="41dp"
            android:layout_marginStart="253dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="284dp"
            android:text="tvNbElevesCour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNomCour"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:layout_marginStart="253dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="108dp"
            android:text="Nom du cours"
            app:layout_constraintBottom_toTopOf="@+id/tvNbElevesCour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnVoirListeEleves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="19dp"
            android:text="Consulter les élèves"
            app:layout_constraintBottom_toTopOf="@+id/btnVoirSeanceCour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNbElevesCour" />

        <Button
            android:id="@+id/btnVoirSeanceCour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="16dp"
            android:text="Consulter les séances"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVoirListeEleves" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="107dp"
            android:text="Nom du cours"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/tvNomCour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>