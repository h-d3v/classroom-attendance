<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSigleCours"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#3D5AFE"
        android:textSize="30sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="268dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="175dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:text="@string/nbÉlèvesInscrit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/tvNomCour"
            android:layout_width="123dp"
            android:layout_height="41dp"
            android:layout_marginStart="253dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="35dp"
            android:text="tvNbElevesCour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNbEleves"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:layout_marginStart="71dp"
            android:layout_marginTop="120dp"
            android:text="nb eleves"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnVoirListeEleves"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="120dp"
            android:text="Consulter les élèves"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="42dp"
            android:text="@string/nomCour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListeSeance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>