<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNomÉtudiant"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="668dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAbsent"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A11010"
            android:text="@string/absent" />

        <Button
            android:id="@+id/btnPrésent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0C6303"
            android:text="@string/présent"
            android:textColor="#48FFFFFF"
            tools:visibility="btnPrésent" />
    </LinearLayout>
</LinearLayout>