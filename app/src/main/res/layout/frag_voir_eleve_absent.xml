<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNomEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="51dp"
        android:text="Harold Sockphoto"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgEleve"
        android:layout_width="237dp"
        android:layout_height="242dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnConfirmer"
        android:layout_width="143dp"
        android:layout_height="72dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="#64DD17"
        android:text="Présent"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAbsence"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailsEleve" />

    <Button
        android:id="@+id/btnAbsence"
        android:layout_width="142dp"
        android:layout_height="73dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="#DF1919"
        android:text="Absent"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnConfirmer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailsEleve" />

    <TextView
        android:id="@+id/tvDetailsEleve"
        android:layout_width="237dp"
        android:layout_height="150dp"
        android:layout_marginStart="84dp"
        android:text="Details sur l'élève et séance"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEleve" />
</androidx.constraintlayout.widget.ConstraintLayout>