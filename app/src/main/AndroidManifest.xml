<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dti.g25.projet_s">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        >

        <activity android:name=".ui.activité.ConnexionActivité"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.activité.VoirListeSeancesActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".ui.activité.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.activité.BtnTestVoirUnCoursGroupeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity  android:name=".ui.activité.VoirCoursGroupeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activité.PrendrePrésenceActivité"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.activité.VoirUnEleve"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.activité.VoirSeanceActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".ui.activité.VoirUnCourGroupeActivity"
            android:parentActivityName=".ui.activité.BtnTestVoirUnCoursGroupeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".ui.activité.VoirListeÉlevesActivité"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
